{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "columns": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["forYou", "following", "notifications", "profile"]
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["custom"]
              },
              "url": {
                "type": "string"
              }
            },
            "required": ["type", "url"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": ["columns"],
  "additionalProperties": false
}
